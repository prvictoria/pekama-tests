<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>
    Описание параметров логирования в файл
    <appender name="file" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="platform.log"/> - файллога
        <param name="Append" value="true"/>
        <param name="MaxFileSize" value="10MB"/>- максимальныйразмерфайла
        <param name="MaxBackupIndex" value="4"/>
        <param name="Encoding" value="Cp1251"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%d{dd MMM yyyy HH:mm:ss.SSS} [%p] [%t] [%c] - %m%n"/>
        </layout>
    </appender>
    Описание параметров логирования на консоль
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Encoding" value="Cp866"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%d{HH:mm:ss.SS} [%p] [%c] - %m%n"/>
        </layout>
    </appender>
    <logger name="org.apache.wicket">
        <level value="error"/>
    </logger>
    <logger name="org.apache.cayenne">
        <level value="warn"/>
    </logger>
    <logger name="ru.diasoft.utils.XMLUtil">
        <level value="warn"/>
    </logger>
    <logger name="ru.diasoft.pageflow">
        <level value="info"/>
    </logger>
    <root>
        <priority value="info"/>
        <appender-ref ref="console"/> - логироватьнаконсоль
        <appender-ref ref="file"/> - логироватьвфайл
    </root>
</log4j:configuration>